@model IEnumerable<MyWebApp.Models.Booking>

@{
    ViewData["Title"] = "Guest Bookings";
    var guest = ViewBag.Guest as MyWebApp.Models.Guest;
}

<div class="container mt-4">
    <h1>Bookings for @guest.Name</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Guest Information</h5>
            <p class="card-text">
                <strong>Email:</strong> @guest.Email<br />
                <strong>Phone:</strong> @guest.PhoneNumber<br />
                <strong>Address:</strong> @guest.Address
            </p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No bookings found for this guest.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Booking ID</th>
                        <th>Room Number</th>
                        <th>Check In</th>
                        <th>Check Out</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.Id</td>
                            <td>@booking.RoomNumber</td>
                            <td>@booking.CheckInDate.ToShortDateString()</td>
                            <td>@booking.CheckOutDate.ToShortDateString()</td>
                            <td>$@booking.TotalPrice (â‚¹@booking.TotalPriceInINR)</td>
                            <td>
                                <span class="badge bg-@(booking.Status == "Cancelled" ? "danger" : booking.Status == "Completed" ? "success" : "primary")">
                                    @booking.Status
                                </span>
                            </td>
                            <td>
                                @if (booking.Status != "Cancelled")
                                {
                                    <form asp-action="CancelBooking" asp-route-id="@booking.Id" method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to cancel this booking?')">
                                            Cancel
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Guests" class="btn btn-secondary">Back to Guests List</a>
        <a asp-action="CreateBooking" asp-route-guestId="@guest.Id" class="btn btn-primary">Create New Booking</a>
    </div>
</div>