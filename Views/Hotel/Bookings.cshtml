@model IEnumerable<MyWebApp.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Crystal Castle Hotel Bookings</h1>

<p>
    <a asp-action="CreateBooking" class="btn btn-primary">Create New Booking</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Guest Name</th>
                <th>Room Number</th>
                <th>Check In</th>
                <th>Check Out</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Id</td>
                    <td>@(booking.Guest?.Name ?? "N/A")</td>
                    <td>@booking.RoomNumber</td>
                    <td>@booking.CheckInDate.ToShortDateString()</td>
                    <td>@booking.CheckOutDate.ToShortDateString()</td>
                    <td>$@booking.TotalPrice (â‚¹@booking.TotalPriceInINR)</td>
                    <td>
                        @if (booking.IsCheckedOut)
                        {
                            <span class="badge bg-info">Checked Out (@booking.ActualCheckOutDate?.ToShortDateString())</span>
                        }
                        else
                        {
                            <span class="badge bg-@(booking.Status == "Cancelled" ? "danger" : booking.Status == "Completed" ? "success" : "primary")">
                                @booking.Status
                            </span>
                        }
                    </td>
                    <td>
                        @if (booking.Status != "Cancelled" && !booking.IsCheckedOut)
                        {
                            <form asp-action="CancelBooking" asp-route-id="@booking.Id" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to cancel this booking?')">
                                    Cancel
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>