@model IEnumerable<MyWebApp.Models.Booking>

@{
    ViewData["Title"] = "Guest Check-in";
}

<div class="container mt-4">
    <h1>Crystal Castle Hotel - Guest Check-in</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No guests are scheduled for check-in today.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Booking ID</th>
                        <th>Guest Name</th>
                        <th>Room Number</th>
                        <th>Scheduled Check In</th>
                        <th>Scheduled Check Out</th>
                        <th>Amount Paid</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.Id</td>
                            <td>@booking.Guest?.Name</td>
                            <td>@booking.RoomNumber</td>
                            <td>@booking.CheckInDate.ToShortDateString()</td>
                            <td>@booking.CheckOutDate.ToShortDateString()</td>
                            <td>$@booking.TotalPrice (â‚¹@booking.TotalPriceInINR)</td>
                            <td>
                                <form asp-action="ProcessCheckIn" asp-route-id="@booking.Id" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success btn-sm" 
                                            onclick="return confirm('Are you sure you want to check in this guest?')">
                                        Process Check-in
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds (Bootstrap 5 - avoid jQuery-dependent call)
        setTimeout(function () {
            document.querySelectorAll('.alert').forEach(function (el) {
                var bsAlert = bootstrap.Alert.getOrCreateInstance(el);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
