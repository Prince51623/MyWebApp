@model IEnumerable<MyWebApp.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<h1>Hotel Rooms</h1>

<div class="row">
    @foreach (var room in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Room @room.RoomNumber</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@room.RoomType</h6>
                    <p class="card-text">@room.Description</p>
                    <p class="card-text">
                        <strong>Price:</strong> $@room.PricePerNight (â‚¹@room.PriceInINR) per night<br />
                        <strong>Status:</strong> @(room.IsAvailable ? "Available" : "Occupied")
                    </p>
                    <a asp-action="RoomDetails" asp-route-id="@room.RoomNumber" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>